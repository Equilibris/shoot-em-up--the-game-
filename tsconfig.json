{
	"include": ["src"],
	"compilerOptions": {
		"watch": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	}
}
